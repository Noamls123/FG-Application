<UserControl x:Class="app0.measurments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:app0"
             mc:Ignorable="d" 
  
             d:DesignHeight="200" d:DesignWidth="320">
    <Viewbox Height="200">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#FF292929" HorizontalAlignment="Left" Height="190" Margin="10,10,0,0" VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
            <TextBox HorizontalAlignment="Left" Height="82" TextWrapping="Wrap" Text="100" FontFamily="Arial Rounded MT Bold" FontSize="70" VerticalAlignment="Top" Width="136" Margin="23,77,0,0" Background="{x:Null}" Foreground="#FF70E0E4" BorderBrush="{x:Null}" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="62" TextWrapping="Wrap" Text="altimeter" FontFamily="Arial Rounded MT Bold" FontSize="28" VerticalAlignment="Top" Width="150" Margin="9,16,0,0" Background="{x:Null}" Foreground="#FFEAF2F2" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
            <Rectangle Fill="#FF292929" HorizontalAlignment="Left" Height="190" Margin="193,10,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="73" TextWrapping="Wrap" Text="100" FontFamily="Arial Rounded MT Bold" FontSize="70" VerticalAlignment="Top" Width="140" Margin="217,77,0,0" Background="{x:Null}" Foreground="#FFE4D370" BorderBrush="{x:Null}" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="62" TextWrapping="Wrap" Text="airspeed" FontFamily="Arial Rounded MT Bold" FontSize="28" VerticalAlignment="Top" Width="150" Margin="203,16,0,0" Background="{x:Null}" Foreground="#FFEAF2F2" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
            <Rectangle Fill="#FF292929" HorizontalAlignment="Left" Height="190" Margin="383,10,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="74" TextWrapping="Wrap" Text="100" FontFamily="Arial Rounded MT Bold" FontSize="70" VerticalAlignment="Top" Width="138" Margin="417,77,0,0" Background="{x:Null}" Foreground="#FFE4A970" BorderBrush="{x:Null}" Grid.Column="1"/>
            <Rectangle Fill="#FF292929" HorizontalAlignment="Left" Height="190" Margin="383,208,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1"/>
            <Rectangle Fill="#FF292929" HorizontalAlignment="Left" Height="190" Margin="193,208,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1"/>
            <Rectangle Fill="#FF292929" HorizontalAlignment="Left" Height="190" Margin="10,208,0,0" VerticalAlignment="Top" Width="190" Grid.ColumnSpan="2"/>
            <TextBox HorizontalAlignment="Left" Height="62" TextWrapping="Wrap" Text="pitch" FontFamily="Arial Rounded MT Bold" FontSize="28" VerticalAlignment="Top" Width="150" Margin="9,216,0,0" Background="{x:Null}" Foreground="#FFEAF2F2" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="62" TextWrapping="Wrap" Text="roll" FontFamily="Arial Rounded MT Bold" FontSize="28" VerticalAlignment="Top" Width="150" Margin="203,214,0,0" Background="{x:Null}" Foreground="#FFEAF2F2" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="62" TextWrapping="Wrap" Text="heading" FontFamily="Arial Rounded MT Bold" FontSize="28" VerticalAlignment="Top" Width="150" Margin="399,16,0,0" Background="{x:Null}" Foreground="#FFEAF2F2" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="62" TextWrapping="Wrap" Text="yaw" FontFamily="Arial Rounded MT Bold" FontSize="28" VerticalAlignment="Top" Width="150" Margin="399,214,0,0" Background="{x:Null}" Foreground="#FFEAF2F2" BorderBrush="{x:Null}" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
            <Ellipse HorizontalAlignment="Left" Height="140" Margin="416,247,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Fill="#FFF5EFEF" Grid.Column="1">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.164"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>

            <Ellipse HorizontalAlignment="Left" Height="139" Margin="26,247,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.295"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Fill>
                    <ImageBrush ImageSource="pitch.jpg" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse HorizontalAlignment="Left" Height="140" Margin="211,244,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Fill="#FFEFEAEA" Grid.Column="1">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.164"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse HorizontalAlignment="Left" Height="140" Margin="211,244,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.505"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Fill>
                    <ImageBrush ImageSource="roll.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse HorizontalAlignment="Left" Height="140" Margin="417,244,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.313"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Fill>
                    <ImageBrush ImageSource="yaw.jpg"/>
                </Ellipse.Fill>
            </Ellipse>

        </Grid>
    </Viewbox>

</UserControl>